@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewUser.Name"></label>
                <input asp-for="NewUser.Name" class="form-control"/>
                <span asp-validation-for="NewUser.Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.Surname"></label>
                <input asp-for="NewUser.Surname"class="form-control" />
                <span asp-validation-for="NewUser.Surname"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.Age"></label>
                <input asp-for="NewUser.Age"class="form-control" />
                <span asp-validation-for="NewUser.Age"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.Login"></label>
                <input asp-for="NewUser.Login" class="form-control" />
                <span asp-validation-for="NewUser.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="m.Password"></label>
                <input asp-for="m.Password" class="form-control" />
                <span asp-validation-for="m.Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
